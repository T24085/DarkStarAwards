rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }
    match /user_uploads/{uid}/{allPaths=**} {
      allow read: if true; // shared assets
      allow write: if isSignedIn() && request.auth.uid == uid;
    }
  }
}


